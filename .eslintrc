{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": false,
    "node": true
  },
  "extends": ["prettier"],
  "plugins": ["airbnb"],
  "rules": {
    "prettier/prettier": "error",
    "prop-types": "off",
    "semi": [2, "never"],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "always"
      }
    ],
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true
      }
    ],
    "object-curly-newline": "off",
    "implicit-arrow-linebreak": "off",
    "no-confusing-arrow": "off",
    "operator-linebreak": "off",
    "arrow-body-style": ["error", "as-needed"],
    "sort-keys": "error",
    "no-case-declarations": "off"
  }
}
